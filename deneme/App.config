<?xml version="1.0" encoding="utf-8" ?>
<configuration>


  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0,Profile=Client"/>
  </startup>

  <appSettings>
    <add key="zipname" value="E:\\EuroApps\\LogZipBackup\\packagesLogs.zip"/>
    <add key="saveLogDays" value="-3"/><!--loglarin saklanacagi gun-->
    <add key="saveRarDays" value="-10"/><!--rarlarin saklanacagi gun-->
    <add key="log4net.Internal.Debug" value="true"/>
    <add key="LogZipNeeded" value="yes"/><!--log ziplenecek ise yes-->
    <add key="period" value="43200" /><!--windows servisin log silme periyodu-->
  </appSettings>

  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Users\Suleyman.Kilic\\Documents\\Visual Studio 2015\\Projects\\ConsoleApplication3\\jsonlog.txt" />
      <param name="AppendToFile" value="true" />
      <param name="DatePattern" value="_yyyyMMddHH&quot;.log&quot;" />
      <param name="RollingStyle" value="Date" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.SerializedLayout, log4net.Ext.Json">
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
</configuration>